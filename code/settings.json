{
  "workbench.colorTheme": "Kanagawa",
  "editor.fontFamily": "JetBrainsMono Nerd Font, iMWritingMonoS Nerd Font Mono,  'FiraCode Nerd Font'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.rulers": [80, 120],
  "editor.semanticHighlighting.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "explorer.compactFolders": false,
  "workbench.statusBar.visible": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "keyboard.dispatch": "keyCode",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "m", "t"],
      "commands": ["editor.emmet.action.matchTag"],
      "silent": true
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.revealDefinition"],
      "silent": true
    },
    {
      "before": ["<leader>", "i"],
      "commands": ["editor.action.goToImplementation"],
      "silent": true
    },
    {
      "before": ["<leader>", "p", "d"],
      "commands": ["editor.action.peekDefinition"],
      "silent": true
    },
    {
      "before": ["<leader>", "p", "i"],
      "commands": ["editor.action.peekImplementation"],
      "silent": true
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["editor.action.showHover"],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.editor.enablePreview": true,
  "editor.fontWeight": null,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "sonarlint.rules": {
    "java:S120": {
      "level": "off"
    }
  },
  "eslint.alwaysShowStatus": true,
  "editor.formatOnPaste": true,
  "editor.cursorSurroundingLines": 15,
  "emmet.excludeLanguages": ["markdown"],
  "python.languageServer": "Jedi",
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "symbols",
  "workbench.sideBar.location": "right",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "cSpell.enableFiletypes": ["!cpp"],
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "relative",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "explorer.confirmDelete": false,
  "emmet.triggerExpansionOnTab": true,
  "redhat.telemetry.enabled": false,
  "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
  "security.workspace.trust.untrustedFiles": "open",
  "java.debug.settings.hotCodeReplace": "auto",
  "java.configuration.updateBuildConfiguration": "automatic",
  "haskell.manageHLS": "PATH",
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/dotfiles/code/init.vim",
  "vim.normalModeKeyBindings": [],
  "[haskell]": {
    "editor.defaultFormatter": "haskell.haskell"
  },
  "[lua]": {
    "editor.defaultFormatter": "yinfei.luahelper"
  },
  "luahelper.format.continuation_indent_width": 2,
  "luahelper.format.indent_width": 2,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword",
        "settings": {
          "fontStyle": "italic bold"
        }
      }
    ]
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "files.associations": {
    "*.y": "yacc"
  },
  "C_Cpp.vcFormat.indent.caseLabels": true,
  "C_Cpp.vcFormat.indent.caseContentsWhenBlock": true,
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "symbols.hidesExplorerArrows": false,
  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none"
  },
  "apc.listRow": {
    "height": 24
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, .eslint*, .prettier*, .editorconfig, tsconfig.*, .nvmrc",
    ".env": ".env*"
  },
  "workbench.startupEditor": "none",
  "extensions.ignoreRecommendations": true,
  "window.zoomLevel": 1,
  "typescript.tsserver.log": "off",
  "workbench.activityBar.location": "hidden",
  "editor.stickyScroll.enabled": false
}
